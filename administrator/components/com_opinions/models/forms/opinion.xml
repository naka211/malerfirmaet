<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_OPINIONS_FORM_LBL_OPINION_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="name" type="text" size="40" class="inputbox"
                                                    
            label="COM_OPINIONS_FORM_LBL_OPINION_NAME"
            description="COM_OPINIONS_FORM_DESC_OPINION_NAME" 
                                                    
                                                    
                                                    
                                                    filter="safehtml" /> 

       <field name="email" type="text" size="40" class="inputbox"
                                                    
            label="COM_OPINIONS_FORM_LBL_OPINION_EMAIL"
            description="COM_OPINIONS_FORM_DESC_OPINION_EMAIL" 
                                                    
                                                    
                                                    
                                                    filter="safehtml" /> 

       <field name="message" type="editor" buttons="true"
        class="inputbox"
        filter="safehtml"
        
        
        
        
            label="COM_OPINIONS_FORM_LBL_OPINION_MESSAGE"
            description="COM_OPINIONS_FORM_DESC_OPINION_MESSAGE"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
